<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Novo Texto</h2>

        <div>Caro professor, insira a proposta de texto aqui</div>
                
        <%= simple_form_for(themes_path) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :photo, as: :file, label: "Anexar proposta aqui" %>
            <br>
          </div>
          <br>
          <div class="form-actions">
            <%= f.button :submit, "Enviar Porposta", class: "btn btn-success btn-SM"  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
