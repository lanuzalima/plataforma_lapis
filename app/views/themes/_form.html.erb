
                
        <%= simple_form_for(@theme) do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">
             <%= f.input :genre, label: "Gênero textual",
                        required: true,
                        autofocus: true %>
            <%= f.input :title, label: "Título/ Tema",
                        required: true %>

            <div class="d-flex justify-content-between">            
              <%= f.input :start_date, label: "Data inicial",
                          as: :string,
                          :input_html => { :class => 'datepicker' },
                          required: true %>
              <br>
              <%= f.input :end_date, label: "Data final",
                          as: :string,
                          :input_html => { :class => 'datepicker' },
                          required: true %>
                                
              <br>
            </div>
            <%= f.input :photo, as: :file, label: "Incluir proposta" %>

          </div>
          <br>
          <div class="form-actions">
            <%= f.button :submit, "Enviar Proposta", class: "btn btn-info btn-sm"  %>
          </div>
        <% end %>
     