<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-xs-12 col-sm-6 col-sm-offset-6">
            <div class="form-login">

                <h2>Cadastre-se</h2>

                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                    <%= f.input :name, label: "Nome",
                                required: true,
                                autofocus: true %>
                    <%= f.input :email,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "email" }%>
                    <%= f.input :cpf,
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "cpf" }%>
                    <%= f.input :role, label: "Perfil", collection: ["Sou professor", "Sou estudante"],
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "Perfil" }%>
                    <%= f.input :password, label: "Senha",
                                required: true,
                                hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length),
                                input_html: { autocomplete: "nova-senha" } %>
                    <%= f.input :password_confirmation, label: "Confirme sua senha",
                                required: true,
                                input_html: { autocomplete: "nova-senha" } %>

                    <%= f.input :photo, as: :file, label: "Foto" %>
                </div>

                <div class="form-actions">
                    <%= f.button :submit, "Confirmar cadastro", class: "btn btn-info btn-lg" %>
                </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>