<%= simple_form_for(@text) do |f| %>
  <%= f.input :name, label: "Nome",
        required: true,
        autofocus: true %>
  <%= f.number_field :grade,
              label: "Nota";
              value: 1000;
              min: 0;
              step: 10;
              max: 1000; %>
  <div class="form-actions">
    <%= f.button :submit, "Atualizar", class: "btn btn-info btn-lg" %>
  </div>
  <% end %>
