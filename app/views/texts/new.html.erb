<div class="container mt-4">
  <h1 class="text-center">Meu novo texto</h1>
  <br>
  <div class="row justify-content-center">
    <div class="card-text col-lg-7 mx-2"> 
      <div class="card-text-infos mx-2" >
        <h2><%= @theme.genre.capitalize %>: "<%= @theme.title.capitalize%>"</h2>
        <div class="row mx-auto d-flex justify-content-space-between">
          <p>Data Inicial: <%= @theme.start_date.strftime("%d/%m/%Y") %></p>
          &nbsp;&nbsp;
          <p>Data final: <%= @theme.end_date.strftime("%d/%m/%Y") %> </p>  
          </div>
        <%= simple_form_for [@theme, @text] do |f| %>
        <%= f.error_notification %>
          <div class="form-inputs">            
            <%= f.input :theme_id, as: :hidden, label: false %>
          <p>(Por favor, no upload do texto, evite imagens escuras e desfocadas.)</p>  
            <%= f.input :photo, as: :file, placeholder: "Foto", label: "Inserir texto" %>
        <!--Botão especial com ícone
            <label  class="btn btn-outline-primary"> Inserir Redação  <i class="fas fa-camera"></i>
              <span style="display:none;">
                <%= f.file_field :image, required: true, multiple: true, name: 'picture' %>
              </span>
            </label> 
        -->
          </div>
          
      
          <div class="form-actions">
            <%= f.button :submit, "Enviar Texto", class: "btn btn-primary px-4"  %>
            <br>
          </div>
        <% end %>   
        </div>
      </div>
    </div>
  
  </div>
</div>




