<div class="container">
  <user data-name="<%= current_user.name %>" data-anno-id="<%= current_user.id %>"></user>
  
  <% if @annotations %>
    <annots class="my_annots" data-img-id="<%= @text_id %>">
      <% @annotations.each do |key, value| %>
        <annot class="annot" style="display:none"
             data-original-id="<%=value[:original_id]%>" 
             data-content="<%=value[:content]%>">
        </annot>
      <% end %>
    </annots>
  <% end %>
  
